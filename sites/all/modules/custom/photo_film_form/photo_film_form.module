/**
 * Theme function for photo-film breadcrumbs
 */
function theme_photo_film_form_breadcrumb($variables) {
  $output = '<div class="photo-film-breadcrumb">';
  $links = array();
  if (!empty($variables['steps']) && !empty($variables['current'])) {
    foreach ($variables['steps'] as $key => $step) {

      $attributes = array();

      if ($key == $variables['current']) {
        $next = next($variables['steps']);
      }
      // add next class to the next step
      if (!empty($next) && $next == $step) {
        $attributes = array('attributes' => array('class' => array('next')));
      }
      $links[] = l(t($step), 'photo-film-form/nojs/' . $key, $attributes);
    }
    $output .= implode('=>', $links);
  }

  $output .= '</div>';

  return $output;
}